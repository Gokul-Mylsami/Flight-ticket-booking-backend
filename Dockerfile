
FROM node:14-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

ENV NODE_ENV=production
ENV PORT=8000
ENV MONGO_URL=
ENV JWT_SECRET=
ENV JWT_EXPIRES_IN = 1d

ENV EMAIL_SERVICE=gmail
ENV EMAIL_USERNAME=
ENV EMAIL_PASSWORD=
ENV FRONTEND_URL=localhost:3000

EXPOSE 8000


CMD ["npm", "start"]
